from locust import HttpUser, task, between, LoadTestShape

class HomepageUser(HttpUser):
    wait_time = between(5, 10)  # UÅ¼ytkownicy zostajÄ… na stronie przez pewien czas
    host = "www.example.com"
    auth = ("abc", "1234") 

    @task
    def visit_homepage(self):
        """ Test: 100 uÅ¼ytkownikÃ³w na stronÄ™ gÅ‚Ã³wnÄ… w kaÅ¼dej sekundzie przez 5 sekund"""
        response = self.client.get("/landing", auth=self.auth)  # ğŸ”¥ GET z autoryzacjÄ…

        if response.status_code == 200:
            print("Strona gÅ‚Ã³wna zaÅ‚adowana poprawnie âœ…")
        else:
            print(f"âŒ BÅ‚Ä…d Å‚adowania strony gÅ‚Ã³wnej: {response.status_code}")

# obciÄ…Å¼enie: 100 uÅ¼ytkownikÃ³w na sekundÄ™ przez 5 sekund
class StepLoadTest(LoadTestShape):
    stages = [
        {"duration": 1, "users": 100, "spawn_rate": 100},  # 1 sekunda â†’ 100 uÅ¼ytkownikÃ³w
        {"duration": 2, "users": 200, "spawn_rate": 100},  # 2 sekunda â†’ 200 uÅ¼ytkownikÃ³w
        {"duration": 3, "users": 300, "spawn_rate": 100},  # 3 sekunda â†’ 300 uÅ¼ytkownikÃ³w
        {"duration": 4, "users": 400, "spawn_rate": 100},  # 4 sekunda â†’ 400 uÅ¼ytkownikÃ³w
        {"duration": 5, "users": 500, "spawn_rate": 100},  # 5 sekunda â†’ 500 uÅ¼ytkownikÃ³w
    ]

    def tick(self):
        run_time = self.get_run_time()
        for stage in self.stages:
            if run_time < stage["duration"]:
                return stage["users"], stage["spawn_rate"]
        return 0, 1  # Zamiast (0, 0), dajemy (0, 1), aby uniknÄ…Ä‡ dzielenia przez 0

